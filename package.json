{
  "name": "ng-deploy-cloudfoundry",
  "version": "0.1.0",
  "description": "Deploy Angular projects to Cloud Foundry",
  "author": {
    "name": "Richard Roozenboom",
    "email": "richard.roozenboom@outlook.com"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:roozenboom/ng-deploy-cloudfoundry.git"
  },
  "bugs": {
    "url": "https://github.com/roozenboom/ng-deploy-cloudfoundry/issues"
  },
  "license": "MIT",
  "keywords": [
    "schematics",
    "angular",
    "cli",
    "cloudfoundry",
    "cf",
    "deploy",
    "ng-deploy"
  ],
  "main": "dist/ng-add/index.js",
  "files": [
    "dist",
    "builders.json",
    "collection.json"
  ],
  "builders": "./builders.json",
  "schematics": "./collection.json",
  "scripts": {
    "build": "yarn clean && yarn compile && yarn copy",
    "clean": "rimraf dist",
    "compile": "tsc -p tsconfig.json",
    "copy": "copyfiles -u 1 ./src/**/*.json ./dist",
    "release": "standard-version",
    "test": "jest"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.803.6",
    "@angular-devkit/core": "^8.3.6",
    "@angular-devkit/schematics": "^8.3.6",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@types/fs-extra": "^8.0.0",
    "@types/jest": "^24.0.18",
    "@types/js-yaml": "^3.12.1",
    "@types/node": "^12.7.8",
    "copyfiles": "^2.1.1",
    "husky": "^3.0.2",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "rimraf": "^3.0.0",
    "standard-version": "^7.0.0",
    "ts-jest": "^24.1.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "fs-extra": "^8.1.0",
    "js-yaml": "^3.13.1",
    "schematics-utilities": "^1.1.2"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
